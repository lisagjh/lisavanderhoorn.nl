---
import { getCollection } from "astro:content";
const allPosts = await getCollection("blog");
---

<section id="blog">
  <div class="wrapper">
    <h2 class="pill">Blog</h2>
    <p>Maybe I very occassionally share some stuff here?</p>
  </div>

  <ul class="grid">
    {
      allPosts.map((post) => (
        <li>
          <a href={`/blog/${post.id}`}>
            <h3>{post.data.title}</h3>
            <p>{post.data.description}</p>
          </a>
        </li>
      ))
    }
  </ul>
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding: 2rem;
    width: 100%;
    max-width: 65rem;
  }

  .wrapper {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding: 2rem;
    background-color: var(--primary-light);
    border-radius: 10px;
  }

  ul.grid {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  li {
    background-color: var(--white);
    border-radius: 12px;
    box-shadow:
      0px 5px 8px 0px rgba(0, 0, 0, 0.03),
      0px 7px 6px 0px rgba(0, 0, 0, 0.02),
      0px 8px 8px 0px rgba(0, 0, 0, 0.03),
      0px -3px 4px 0px rgba(0, 0, 0, 0.03);
    list-style: "";
    width: 80%;
  }

  li a {
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 2rem;
    text-decoration: none;
  }

  h3 {
    font-size: 1.5rem;
  }

  p {
    font-size: 0.9rem;
    max-width: 40ch;
  }
</style>
