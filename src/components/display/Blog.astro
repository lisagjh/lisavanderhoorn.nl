---
import { getCollection } from "astro:content";
const allPosts = await getCollection("blog");
---

<section>
  <div class="wrapper">
    <h2 class="pill">Blog</h2>
    <p>Maybe I very occassionally share some stuff here?</p>
  </div>

  <ul class="grid">
    {
      allPosts.map((post) => (
        <li>
          <a href={`/blog/${post.id}`}>
            <h3>{post.data.title}</h3>
            <p>{post.data.description}</p>
          </a>
        </li>
      ))
    }
  </ul>
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding: 2rem;
    width: 100%;
    max-width: 65rem;
  }

  .wrapper {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding: 2rem;
    background-color: var(--primary-light);
    border-radius: 10px;
  }

  li {
    padding: 2rem;
    list-style: "";
  }

  a {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    text-decoration: none;
  }

  h3 {
    font-size: 1.5rem;
  }

  p {
    font-size: 0.9rem;
  }
</style>
