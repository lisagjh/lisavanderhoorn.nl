<script>
  const classes = [
    "standard",
    "variation-one",
    "variation-two",
    "variation-three",
    "variation-four",
    "variation-five",
  ];

  let lastClass = ""; // Store the last selected class

  const button = document.querySelector("button.random-class");

  if (button) {
    button.addEventListener("click", function () {
      let randomClass;
      // Keep picking a new class until it's different from the last one
      do {
        randomClass = classes[Math.floor(Math.random() * classes.length)];
      } while (randomClass === lastClass);

      // Remove previously applied classes from the <html> element (which is :root)
      document.documentElement.classList.remove(...classes);

      // Apply the new class to the <html> element
      document.documentElement.classList.add(randomClass);

      // Update lastClass to track the last applied class
      lastClass = randomClass;
    });
  }
</script>

<button class="random-class" aria-label="Toggle Random Class"></button>

<style>
  button {
    width: 4rem;
    height: 4rem;
    background-color: var(--primary);
    background: linear-gradient(0deg, var(--primary) 0%, var(--secondary) 100%);
    transition: 0.25s ease-in-out;
    border: none;
  }
</style>
