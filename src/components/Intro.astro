<script>
  const button = document.querySelector(".scroll-next-section");
  const aboutSection = document.querySelector(".about");

  button?.addEventListener("click", function () {
    aboutSection?.scrollIntoView({
      behavior: "smooth",
      block: "start",
    });
  });

  document.addEventListener("DOMContentLoaded", function () {
    const nameSvg = document.querySelector("svg.name");

    window.addEventListener("scroll", function () {
      const scrollPercentage = Math.min(
        window.scrollY / (window.innerHeight * 0.5),
        1
      );

      const heightScale = 1 + scrollPercentage * 0.5;
      const moveDown = scrollPercentage * 2;

      nameSvg.style.transform = `scaleY(${heightScale}) translateY(${moveDown}rem)`;
    });
  });
</script>

<style>
  .section_full-width {
