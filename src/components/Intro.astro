    position: relative;
    overflow: hidden;
  }

  .wrapper {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: end;
    gap: 1rem;
    z-index: 10;
  }

  p {
    align-self: flex-start;
  }

  svg.name {
    width: 100%;
    height: fit-content;
    max-width: 30rem;
    z-index: 10;
    transform-origin: center bottom;
    transition: 0.25s ease-in-out;
    overflow: visible;
  }

  svg.name path {
    transform-origin: center bottom;
    transition: 0.25s ease-in-out;
  }

  button {
    width: clamp(10rem, 100%, 15rem);
  }
</style>
